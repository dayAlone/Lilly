.side-bar__right
	position initial

.landing
	.acticles
		full-width()
		.item
			full-width()
			margin-bottom: 15px
			padding: 10px 0
			&:hover
				color: black
			&.map
				padding: 30px 0
				.title
					font-size: 40px
				p
					font-weight: 400
					font-size: 24px
					line-height: 24px
				.link
					font-weight: 300
					text-transform: none
					line-height: 40px
					font-size: 35px
					padding: 0 20px 4px
					margin-top: 7px
					color: white
					border: 0
					background-image: linear-gradient(bottom left, rgba(155, 29, 33, 0.8) -18.85%, rgba(233, 33, 45, 0.8) 81.15%)
			.image
				opacity: 0.6
				z-index: -1*1
				position: absolute
				top: 0
				left: 0
				width: 100%
				height: 100%
				background-size: 100% auto
				background-position: 230px -80px
				background-repeat: no-repeat
				@media (max-width: 1200px)
					background-position: 200px -60px
				.shadow-1
					background-image: linear-gradient(right, rgba(255, 255, 255, 0) 0%, white 70%)
					position: absolute
					top: 0
					left: 0
					width: 100%
					height: 100%
			&:nth-child(2)
				.image
					background-position: 230px -140px
					@media (max-width: 1200px)
						background-position: 10px -120px
						background-size: 150% auto
			&:nth-child(4)
				.image
					@media (max-width: 1200px)
						background-position: 230px 0px
						background-size: cover
			.title
				full-width()
				font-size: 30px
				line-height: 30px
				font-weight: bold
				margin-bottom: 5px
			p
				full-width()
				font-size: 18px
				line-height: 18px
				width: 80%
			.link
				clear: both
				float: left
				font-weight: bold
				text-transform: uppercase
				color: #eb2833
				font-size: 18px
				border-bottom: 1px solid #eb2833
	@media (max-width: 770px)
		.enter, .enter2
			display: none
	.enter
		full-width()
		b("back.jpg")
		background-size: cover
		min-height: 628px
		color: white
		padding: 20px 0
		margin-bottom: 20px
		.frame
			full-width()
			background: rgba(0, 0, 0, 0.4)
			min-height: 40px
			margin-bottom: 20px
			margin-top: 5px
			padding: 0 20px 3px
			line-height: 40px
			color: white
			text-transform: uppercase
			a
				color: white
				font-weight: 300
				font-size: 28px
				display: inline-block
				vertical-align: middle
			.checkbox
				display: inline-block
				vertical-align: middle
				border-radius: 3px
				position: relative
				top: 1px
				margin-right: 5px
				width: 22px
				height: 21px
				background: white
				&.checked
					&:after
						position: absolute
						b("check.png")
						background-size: contain
						left: -1*3px
						top: -1*6px
						background-repeat: no-repeat
						width: 28px
						height: 24px
						content: ""
		p
			padding: 0 20px
			font-size: 14px
			line-height: 17px
			font-weight: 300
			margin-bottom: 15px
		.title
			text-align: center
			padding: 0 20px
			margin-bottom: 20px
			full-width()
			span
				full-width()
				&:nth-child(1)
					font-size: 49px
					line-height: 47px
					width: 102%
					margin-left: -1*1%
					@media (max-width: 1200px)
						font-size: 55px
					@media screen and (max-width: 1200px)
						font-size: 36px
				&:nth-child(2)
					font-size: 30px
					line-height: 30px
					margin-top: 7px
					@media (max-width: 1200px)
						font-size: 33px
					@media screen and (max-width: 1200px)
						font-size: 22px
				&:nth-child(3)
					font-size: 24px
					@media (max-width: 1200px)
						font-size: 27px
					@media screen and (max-width: 1200px)
						font-size: 18px
	.enter2
		full-width()
		max-width 273px
		b("bg3.jpg", top right)
		background-size: cover
		min-height: 483px
		color: white
		padding: 20px 13px
		margin-bottom: 20px
		p
			font-size: 12px
			line-height: 13px
			width: 97%
		.title
			full-width()
			margin-bottom: 15px
			span
				full-width()
				font-size: 24px
				line-height: 24px
				&:first-of-type
					font-size: 48px
					margin-top: -1*5px
					line-height: 48px
		.b-frame
			full-width()
			width: 313px
			@media (max-width: 1024px)
				width: 240px
			height: 39px
			padding-left: 40px
			line-height: 38px
			b("r2.png", top right)
			margin-bottom: 15px
			margin-left: -1*13px
			.checkbox
				left: 13px
				top: 10px
				width: 20px
				height: 20px
				border: 2px solid white
				margin: 0
				padding: 0
				position: absolute
				&.checked
					&:after
						position: absolute
						b("check2.png")
						background-size: contain
						left: -1*3px
						top: -1*6px
						background-repeat: no-repeat
						width: 28px
						height: 24px
						content: ""
			a
				font-size: 24px
				font-weight: bold
				color: white
		min-width: 223px
		@media (min-width: 1024px)
			min-width: 273px
.landing
	width: 100%
	margin: 0 auto
	h1
		color: #eb222e
		margin-bottom: 30px
	.row
		margin-bottom: 20px
	img
		max-width: 100%
	.big
		font-size: 19px
	.bold
		font-weight: 500
	.list
		full-width()
		list-style: none
		padding: 0
		margin-bottom: 40px
		li
			full-width()
			margin-bottom: 10px
			line-height: 18px
			a
				color: #eb222e
				text-decoration: underline
.fullwidth-list
	&__title
		padding 0 10px		
		@media (min-width: 770px)
			padding 0
		iframe
			max-height 200px
			@media (min-width: 770px)
				max-height none
#fullwidth-list
	@media (min-width: 770px)
		margin-top -100px
		padding 0 20px
	&.overlay
		margin-top 0
		.video-frame
			position relative
		h1
			font-size 42px
			br
				display none
		.landing
			position: absolute
	.landing
		&.affix
			top 20px
	h1
		font-weight 700
		margin-top 0
		margin-bottom 20px
		font-size 36px
		small
			font-size 20px
			full-width()
			line-height: 20px
			margin-top 4px
			margin-bottom 25px
	.locator
		margin-bottom: 20px
		full-width()
	.enter2
		b("bg3.png")
	#promo .block
		filter: gray; /* IE6-9 */
