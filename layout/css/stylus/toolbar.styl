#toolbar
	overflow: hidden
	position: relative
	z-index: 100
	padding-top: 20px
	padding-bottom: 20px
	transition-property: width, color, border, font-size, max-width	
	transition-duration: 0.3s	
	.mobile_title
		position: absolute
		display: none
		left: 75px
		top: 7px
		line-height: 20px
		font-size: 12px
		strong, span
			full-width()
			line-height: 13px
		span
			font-size: 10px
			line-height: 10px
		.bottom
			full-width()
			margin-top: 16px
		display: none
		@media (max-width: 770px)
			display: block
	#logo
		img
			width: 120px
			margin: 5px 0
			@media (max-width: 770px)
				width: 62px
	&.white
		.nav
			color: white
			a
				color: white
				text-shadow: -1px 2px 3px rgba(1, 1, 4, 0.67)
			.small
				color: rgba(255, 255, 255, 0.7)
	.nav
		full-width()
		@media (max-width: 1024px)
			width: 101%
		padding: 0
		margin: 0
		margin-top: 30px
		list-style: none
		@media screen and (max-width: 1200px)
			left: 30px
		@media screen and (max-width: 1024px)
			left: 20px
		@media (max-width: 770px)
			position: fixed
			top: 0
			margin: 0
			height: 100%
			z-index: 2000
			right: -1*240px
			background: rgba(0, 0, 0, 0.87)
			width: 240px
			padding-top: 5px
			left: auto
			transition-property: right	
			transition-duration: 0.3s	
			&.open
				right: 0
		li
			float: left
			text-align: center
			line-height: 14px
			padding: 0 2%
			&:nth-child(2)
				padding-left: 0
			&:last-child
				padding-right: 0
			@media screen and (max-width: 1024px)
				padding: 0 1.3%
			@media (max-width: 770px)
				full-width()
				text-align: left
				padding: 0 !important
				margin-bottom: 5px
				&.hidden
					display: block !important
					visibility: visible !important
					margin: 0
					padding: 0
					a
						position: absolute
						right: 5px
						top: 3px
						width: 40px
						height: 40px
						z-index: 20
						width: auto
						margin-top: 0
						border: 0
						&:after
							display: none
			a
				display: inline-block
				margin-bottom: 14px
				font-size: 21px
				margin-bottom: 10px
				font-weight: 300
				color: #5f5e4d
				&:hover
					color: red
					background: transparent
				&.active
					font-weight: 700
				@media screen and (max-width: 1200px)
					font-size: 19px
				@media screen and (max-width: 1024px)
					font-size: 18px
				@media (max-width: 770px)
					full-width()
					color: white
					font-size: 21px
					line-height: 21px
					padding: 8px 8px !important
					margin-bottom: 0
					br
						display: none
			.user &:last-child
				a
					background-image: linear-gradient(bottom left, rgba(155, 29, 33, 0.8) -18.85%, rgba(233, 33, 45, 0.8) 81.15%)
					line-height: 30px
					padding: 2px 15px 3px 15px
					margin-left: -1*15px
					margin-top: -1*9px
					color: white
					@media screen and (max-width: 1024px)
						margin-left: 0
					@media (max-width: 770px)
						margin-top: 10px
						text-shadow: none
			span.small, a.small
				color: #5f5e4d
				text-shadow: none
				font-family: "Helvetica Neue", Arial
				font-style: italic
				font-size: 12px
				line-height: 14px
				padding: 0
				margin: 0
				@media screen and (max-width: 1200px)
					font-size: 11px
				@media screen and (max-width: 1024px)
					font-size: 11px
				@media (max-width: 770px)
					full-width()
					font-size: 13px
					padding: 0 8px !important
					line-height: 22px
					font-style: normal
					color: white
					br
						display: none
			span.small
				@media (max-width: 770px)
					padding: 0 8px
			a.small
				@media (max-width: 770px)
					text-decoration: underline
					text-transform: lowercase
				&:hover
					color: red
				&.active
					font-weight: bold
	.enter
		float: right
		color: white
		background: #eb3a43
		text-transform: uppercase
		font-weight: bold
		line-height: 27px
		padding: 0 15px
		margin: 11px 14px
		display: none
		.doctor &
			display: none !important
		@media (max-width: 770px)
			display: block
	.trigger
		float: right
		width: 22px
		height: 18px
		border-top: 1px solid black
		border-bottom: 1px solid black
		position: relative
		margin-top: 16px
		display: none
		svg
			height: 21px
			width: 13px
			g, path
				fill: white
		@media (max-width: 770px)
			display: block
		&:after
			content: ""
			position: absolute
			top: 50%
			border-top: 1px solid black
			width: 100%

			
	@media (max-width: 770px)
		box-shadow: 1px 1px 2px rgba(8, 10, 14, 0.22)
		background: white
		overflow: visible
		padding: 0
		height: 48px
		line-height: 48px
		position: fixed
		top: 0
		left: 0
		width: 100%

.promo
	max-width 250px
	display inline-block
	&__text
		width 100%
		float right
		margin-bottom 10px
		margin-top -10px
		.center &
			float none
		&--big
			font-weight: bold
			font-size 24px
			margin-top 15px
			margin-bottom 15px
	&__button
		display inline-block
		background-image: linear-gradient(bottom left, rgba(155, 29, 33, 0.8) -18.85%, rgba(233, 33, 45, 0.8) 81.15%)
		line-height: 30px
		padding: 2px 29px 3px
		margin-top: -9px
		color: white
		&--big
			line-height 40px
			font-size 20px
		&:hover
			color: white