#enter
	full-width()
	position: fixed
	z-index: 300
	top: 139px
	min-height: 200px
	b("enter-bg.png", top center)
	margin-bottom: 14px
	padding: 30px 0
	color: white
	background-size: cover
	right: 0
	overflow: hidden
	@media (max-width: 770px)
		display: none
	&.dont-hide
		top: auto
		bottom: 0
		margin-bottom: 0 !important
	&.v2
		background-image: none
		background-color: rgba(189, 34, 39, 0.9)
		border-radius: 30px 30px 0 0
		height: 150px
		min-height: 0
		a
			background: rgba(235, 34, 45, 0.8)
			border-radius: 30px 30px 0 0
			padding-left: 90px
		.block
			overflow: visible
			right: 40px
			top: 75px
			padding-top: 12px
			p
				margin-top: -1*170px
				width: 100%
		.checkbox
			top: 19px
			left: 45px
		.title
			float: left
			width: 30%
			text-align: right
			font-size: 25px
			line-height: 29px
			padding-right: 20px
		p
			float: right
			width: 70%
	&.short
		width: 247px
		background: transparent
		height: 94px
		min-height: 0
		.checkbox, .container
			opacity: 0
		a
			opacity: 0.75
	.checkbox
		position: absolute
		width: 32px
		height: 32px
		cursor: pointer
		background: white
		border-radius: 4px
		top: 37px
		left: 25px
		&.checked
			b("checkbox.png", center center, white)
	a
		float: left
		color: white
		font-size: 32px
		font-weight: 600
		text-transform: uppercase
		line-height: 64px
		padding-left: 70px
		width: 247px
		height: 94px
		b("enter.png", no-repeat)
	.block
		position: absolute
		background: transparent
		width: 245px
		right: 0
		top: 20px
		p
			float: right
			width: 80%
			margin-right: 5px
	p
		font-size: 12px
	.title
		text-transform: uppercase
		font-size: 32px
		font-weight: 700
		margin-bottom: 15px